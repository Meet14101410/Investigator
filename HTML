    <script>
        // Basic client-side validation using JavaScript (for demonstration)
        document.getElementById('aeReportForm').addEventListener('submit', function(event) {
            let isValid = true;
            const requiredFields = ['patientID', 'aeTerm', 'startDate', 'severity', 'outcome'];

            requiredFields.forEach(fieldId => {
                const input = document.getElementById(fieldId);
                const error = document.getElementById(fieldId + 'Error');
                if (!input.value.trim()) {
                    error.style.display = 'block';
                    isValid = false;
                } else {
                    error.style.display = 'none';
                }
            });

            // Specific check for radio buttons
            const relationshipRadios = document.getElementsByName('relationship');
            let isRelationshipSelected = false;
            for (const radio of relationshipRadios) {
                if (radio.checked) {
                    isRelationshipSelected = true;
                    break;
                }
            }
            const relationshipError = document.getElementById('relationshipError');
            if (!isRelationshipSelected) {
                relationshipError.style.display = 'block';
                isValid = false;
            } else {
                relationshipError.style.display = 'none';
            }

            if (!isValid) {
                event.preventDefault(); // Stop form submission if validation fails
                alert('Please fill in all required fields.');
            }
        });
    </script>
