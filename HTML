    <div class="container">
        <h2>Adverse Event (AE) Reporting Form</h2>
        <form id="aeReportForm" action="/submit_ae" method="POST">
            <div class="form-group">
                <label for="patientID">Patient ID:</label>
                <input type="text" id="patientID" name="patientID" required>
                <div class="error-message" id="patientIDError">Patient ID is required.</div>
            </div>

            <div class="form-group">
                <label for="aeTerm">Adverse Event Term:</label>
                <input type="text" id="aeTerm" name="aeTerm" placeholder="e.g., Headache, Nausea" required>
                <div class="error-message" id="aeTermError">Adverse Event Term is required.</div>
            </div>

            <div class="form-group">
                <label for="startDate">AE Start Date:</label>
                <input type="date" id="startDate" name="startDate" required>
                <div class="error-message" id="startDateError">Start Date is required.</div>
            </div>

            <div class="form-group">
                <label for="endDate">AE End Date (if resolved):</label>
                <input type="date" id="endDate" name="endDate">
            </div>

            <div class="form-group">
                <label for="severity">Severity:</label>
                <select id="severity" name="severity" required>
                    <option value="">Select Severity</option>
                    <option value="Mild">Mild</option>
                    <option value="Moderate">Moderate</option>
                    <option value="Severe">Severe</option>
                </select>
                <div class="error-message" id="severityError">Severity is required.</div>
            </div>

            <div class="form-group">
                <label>Relationship to Investigational Product:</label>
                <div class="radio-group">
                    <input type="radio" id="relatedYes" name="relationship" value="Yes" required>
                    <label for="relatedYes">Yes</label>
                    <input type="radio" id="relatedNo" name="relationship" value="No">
                    <label for="relatedNo">No</label>
                    <input type="radio" id="relatedUnknown" name="relationship" value="Unknown">
                    <label for="relatedUnknown">Unknown</label>
                </div>
                <div class="error-message" id="relationshipError">Relationship is required.</div>
            </div>

            <div class="form-group">
                <label for="actionTaken">Action Taken (e.g., Dose reduced, Drug stopped):</label>
                <textarea id="actionTaken" name="actionTaken"></textarea>
            </div>

            <div class="form-group">
                <label for="outcome">Outcome:</label>
                <select id="outcome" name="outcome" required>
                    <option value="">Select Outcome</option>
                    <option value="Resolved">Resolved</option>
                    <option value="Resolving">Resolving</option>
                    <option value="Not Resolved">Not Resolved</option>
                    <option value="Fatal">Fatal</option>
                    <option value="Unknown">Unknown</option>
                </select>
                <div class="error-message" id="outcomeError">Outcome is required.</div>
            </div>

            <button type="submit">Submit AE Report</button>
